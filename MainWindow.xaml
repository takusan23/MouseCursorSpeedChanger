<Window x:Class="MouseCursorSpeedChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseCursorSpeedChanger" xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Icon="/Resources/icon.ico"
        Title="MainWindow" Height="450" Width="800">

    <tb:TaskbarIcon ToolTipText="マウスのカーソルの速度を変更するやつ" IconSource="/Resources/icon.ico">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="マウスの速度に変更" Click="MenuItemClickMouse"/>      
                <MenuItem Header="タッチパッドの速度に変更" Click="MenuItemClickTouchPad"/>             
                <MenuItem Header="終了" Click="MenuItemClickExit" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>

</Window>
